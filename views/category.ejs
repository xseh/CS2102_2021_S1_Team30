<!DOCTYPE html>
<html>
    <head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content="">
		<meta name="author" content="">

		<title>The Collar Klub</title>

		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link href="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap4.min.css" rel="stylesheet">

		<!-- Custom styles for this template-->
        <link href="stylesheets/index.css" rel="stylesheet">
        <link href="stylesheets/picture.css" rel="stylesheet">
    </head>

    <body id="page-top">
    <%- include navbar.ejs %>
        <div id="wrapper">
            <%- include adminSidebar.ejs %>
            <div id="content-wrapper">
                <div class="container-fluid">		
                    <div class="card mb-3">
                        <div class="card-header">
                            <i class="fas fa-paw"></i> &nbsp; Category Information
                        </div>
                        <div class="card-body">
                            <% var text = (category.length == 0) ? "Warning! Website cannot function without category type!" : "" %>
                            <%= text %>
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Category</th>
                                            <th>Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var i=0; i<category.length; i++) { %>
                                        <tr>
                                            <td>
                                                <!-- Button trigger modal -->
                                                <button class="btn" type="submit" id="edit_cat" name="edit_cat"><i class="fas fa-edit" title="Edit Category" data-toggle="modal" data-target="#editModal"></i></button>
                                                
                                                <!-- Modal -->
                                                <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="editLabel">Edit <%= category[i].cat_name%></h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Cancel">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <!-- add category information here-->
                                                                <form action="edit_cat" method="post" id="edit_cat">
                                                                    <label for="cat_name">Category Name:</label><input type="text" required="required" readonly class="form-control-plaintext" id="cat_name" value="<%= category[i].cat_name %>" name="cat_name">
                                                                    <label for="base_price">Base Price:</label>
                                                                    <input type="text" id="base_price" name="base_price" value="<%= category[i].base_price %>">
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                                <button class="btn btn-primary" type="submit" id="edit_cat" name="edit_cat">Update</button></form>
                                                                
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><%= category[i].cat_name%></td>
                                            <td><%= category[i].base_price%></td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Button trigger modal -->
                            <button class="btn btn-outline-primary" type="submit" id="add_cat" name="add_cat" data-toggle="modal" data-target="#addModal">Add Category</button>
                                                
                            <!-- Modal -->
                            <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="editLabel">Add</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Cancel">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <!-- add category information here-->
                                            <form action="add_cat" method="post" id="add_cat">
                                                <div><label for="cat_name">Category Name:</label>
                                                <input type="text" required="required" id="cat_name" name="cat_name" style="float:right"></div>

                                                <div><label for="base_price">Base Price:</label>
                                                <input type="text" id="base_price" name="base_price" style="float:right"></div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                            <button class="btn btn-primary" type="submit" id="add_cat" name="add_cat">Add</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div>
                                <span class="badge badge-pill badge-info"><%= add_msg %></span><span class="badge badge-pill badge-info"><%= edit_msg %></span><span class="badge badge-pill badge-info"><%= del_msg %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include bottomscript.ejs %>
    </body>
</html>
          